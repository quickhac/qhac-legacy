{
  "name": "QuickHAC",
  "version": "0.9.9",
  "manifest_version": 2,
  "description": "Quickly and efficiently check your grades.",
  "browser_action": {
    "default_icon": "icon-new48-opaque.png",
    "default_popup": "hac.html"
  },
  "background": {
    "page": "background.html"
  },
  "permissions": [
    "https://hacaccess.herokuapp.com/",
    "https://*.roundrockisd.org/",
    "notifications"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": ["icon.png"],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "update_url": "https://hacaccess.herokuapp.com/public/update.xml"
}